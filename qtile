import sys
from libqtile import confreader, manager

def main():

    '''
    Main function for accessing qtile.

    This file should be chmod +x            
    '''
    
    from argparse import ArgumentParser

    arger = ArgumentParser(
                       description="Tiling window manager written in python",
                       version="%(prog)s 0.4"
              ) 
    arger.add_argument("-c", "--config",
                       type=str,
                       default=None, # change this to a real default
                       dest='configfile',
                       help="""Use specified configuration file, 'default'
                       will load the system default config."""
              )
    arger.add_argument("-f", "--fallback",
                       type=str,
                       default=None,
                       dest="fallback",
                       help="""Use specified fallback configuration file,
                       'default' will load the system default config as
                       fallback."""
              )
    arger.add_argument("-d", "--debug",
                       action="store_true", default=False,
                       dest="debug",
                       help='Print lots of debugging output.'
              )
    arger.add_argument("-s", "--socket",
                       type=str,
                       default=None,
                       dest="socket",
                       help='Path to Qtile comms socket.'
              )

    options = arger.parse_args()

    try:
        conf = confreader.File(options.configfile)
        
    except confreader.ConfigError, error:
        if options.fallback:
            print >> sys.stderr, "Config error: %s" % error.message
            print >> sys.stderr, "Falling back to config file: %s"  \
                % options.fallback
            conf = confreader.File(options.fallback)
        else:
            raise
    qtile = manager.Qtile(conf, fname=options.socket)
    qtile.debug = options.debug
    qtile.loop()


if __name__ == "__main__":
    main()
