import logging
import os
import os.path
import sys
import traceback
from libqtile import confreader, manager, command

def main():
    from optparse import OptionParser, OptionGroup
    parser = OptionParser(version="%prog 0.4")
    parser.add_option(
        "-c", "--config",
        action="store", type="string",
        default=None,
        dest="configfile",
        help='Use specified configuration file,'
        ' "default" will load the system default config.'
    )
    parser.add_option(
        "-f", "--fallback",
        action="store", type="string",
        default=None,
        dest="fallback",
        help='Use specified fallback configuration file,'
        ' "default" will load the system default config as fallback.'
    )
    parser.add_option(
        "-s", "--socket",
        action="store", type="string",
        default=None,
        dest="socket",
        help='Path to Qtile comms socket.'
    )
    parser.add_option(
        "-n", "--no-spawn",
        action="store_true",
        default=False,
        dest="no_spawn",
        help='Avoid spawning apps. (Used for restart)'
    )
    parser.add_option(
        '-l', '--log-level',
        default='INFO',
        dest='log_level',
        choices=('DEBUG', 'INFO', 'WARNING', 'ERROR', 'CRITICAL'),
        help='Set qtile log level')

    options, args = parser.parse_args()

    try:
        c = confreader.File(options.configfile)
    except confreader.ConfigError, v:
        if options.fallback:
            print >> sys.stderr, "Config error: %s" % v.message
            print >> sys.stderr, "Falling back to config file: %s" % (
                options.fallback)
            c = confreader.File(options.fallback)
        else:
            raise

    log_level = getattr(logging, options.log_level)
    q = manager.Qtile(c, log_level=log_level,
                      fname=options.socket, no_spawn=options.no_spawn)
    q.loop()



if __name__ == "__main__":
    try:
        main()
    except Exception:

        print "Crashed ! "
        traceback.print_exc()
        print "Trying to restart..."
        os.execv(sys.executable, [sys.executable] + sys.argv + ['--no-spawn'])
    print "Exiting cleanly"
